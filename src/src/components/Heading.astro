---
import type { Translation } from '@/types/Translation';

interface Props {
    t: Translation;
}

const { t }: Props = Astro.props;
---

<div class="logo h-80"></div>
<div
    class="transition-colors duration-500 font-mplus text-lg px-6 py-3 backdrop-blur-3xl
    bg-white/75 dark:bg-zinc-700/50 rounded-lg w-full"
>
    <pre
        class="mx-auto w-min h-full sm:text-lg text-base text-center sm:text-start"
        set:html={t.index.heading.greeting}
    />
</div>
<div class="flex flex-row justify-between gap-4 w-full">
    <div class="flex flex-col items-start gap-4">
        <h1
            class="font-bold text-[2.5rem] leading-11 tracking-wide"
        >
            {t.index.heading.name}
        </h1>
        <p class="text-xl">{t.index.heading.position}</p>
    </div>
    <div
        class="rounded-full min-w-36 min-h-36 bg-red-50 bg-[url(/images/ava2.jpg)] bg-contain bg-center bg-no-repeat
        border-[3px] border-white dark:border-orange-100"
    >
    </div>
</div>