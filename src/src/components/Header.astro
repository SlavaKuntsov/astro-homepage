---
import { IoLogoGithub } from "react-icons/io";

import "../styles/global.css";
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle";
---

<header class="fixed z-50 w-full backdrop-blur-md py-4 shadow-sm">
    <nav
        class="flex flex-row items-center justify-between gap-10 mx-auto max-w-3xl px-3"
    >
        <div class="inline-flex gap-10">
            <h2>
                <a
                    class="text-2xl font-semibold font-mplus tracking-tighter cursor-pointer py-1"
                    href="/">{SITE_TITLE}</a
                >
            </h2>
            <div class="flex-row gap-7 hidden md:flex text-xl">
                <HeaderLink href="/works">Works</HeaderLink>
                <HeaderLink href="/about">About</HeaderLink>
                <HeaderLink
                    href="https://github.com/SlavaKuntsov/astro-homepage"
                >
                    <IoLogoGithub />
                    Source
                </HeaderLink>
            </div>
        </div>

        <ThemeToggle client:load />
    </nav>
</header>