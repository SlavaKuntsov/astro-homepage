---
import '../styles/global.css';
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './custom/theme-toggle';
import LanguageToggle from './custom/language-toggle';
import { IoLogoGithub } from 'react-icons/io5';
import { DropdownMenuDemo } from './custom/dropdown-menu';
import type { Translation } from '../types/Translation';

interface Props {
	t: Translation;
}

const { t }: Props = Astro.props;
---

<header
	class='fixed z-50 w-full backdrop-blur-md py-4 shadow-sm min-h-[54px] max-h-[54px]'
>
	<nav
		class='flex flex-row items-center justify-between gap-7 mx-auto max-w-3xl px-3'
	>
		<div class='inline-flex gap-10'>
			<h2>
				<a
					class='text-2xl font-semibold font-mplus tracking-tighter cursor-pointer py-1'
					href='/'>{SITE_TITLE}</a
				>
			</h2>
			<div class='flex-row gap-7 hidden md:flex text-xl'>
				<HeaderLink href='/works'>{t.header.links[1]}</HeaderLink>
				<HeaderLink href='/arts'>{t.header.links[2]}</HeaderLink>
				<HeaderLink href='https://github.com/SlavaKuntsov/astro-homepage'>
					<IoLogoGithub />
					{t.header.links[3]}
				</HeaderLink>
			</div>
		</div>

		<div class='flex-row gap-4 items-center justify-center hidden md:flex'>
			<ThemeToggle client:load />
			<LanguageToggle client:load />
		</div>
		<DropdownMenuDemo t={t} client:load />
	</nav>
</header>
